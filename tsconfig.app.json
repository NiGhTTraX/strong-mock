{
  "compilerOptions": {
    "module": "Node16",

    "noEmit": true,
    "declaration": false,

    "target": "ES6",
    "downlevelIteration": true,

    "types": [],
    "lib": ["ES6", "ES2019"],
    "skipLibCheck": true,

    "strict": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false
  },
  "include": ["src"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.contract.ts",
    "**/*.mocks.ts"
  ]
}
